<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="playerViewModel"
            type="de.ur.mi.audidroid.viewmodels.PlayerViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--TODO: Use dimens and change button position to less fix coordinates-->
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/color_surface"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="8dp"
            app:hideOnScroll="false"
            app:fabCradleVerticalOffset="16dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_replay_5"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:tint="@color/color_on_secondary"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_forward_5"
            android:layout_marginStart="300dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:tint="@color/color_on_secondary"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_primary"
            android:onClick="@{() -> playerViewModel.isPlaying ? playerViewModel.onPausePlayer() :  playerViewModel.onStartPlayer()}"
            android:src="@{playerViewModel.isPlaying ? @drawable/ic_pause : @drawable/ic_play_arrow, default = @drawable/ic_play_arrow}"
            app:layout_anchor="@id/bottom_app_bar" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
