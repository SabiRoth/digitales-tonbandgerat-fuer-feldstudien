<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recording"
            type="de.ur.mi.audidroid.models.EntryEntity"/>

        <variable
            name="clickListener"
            type="de.ur.mi.audidroid.adapter.RecordingListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:onClick="@{() -> clickListener.onClick(recording)}">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/text_recording_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_date"
                    android:fontFamily="@font/rubik_medium"
                    app:recordingDate="@{recording}"/>

                <TextView
                    android:id="@+id/text_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_file_name"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/text_recording_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_time"
                    android:fontFamily="@font/rubik_light" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_popup_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_popup_menu"
                android:contentDescription="@string/popup_menu_button"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.016" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>