<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.AudidroidTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.AudidroidTheme.BottomSheet.Modal
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.AudidroidTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.AudidroidTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="ThemeOverlay.AudidroidTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.AudidroidTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="AudidroidTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AudidroidTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="AudidroidTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AudidroidTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AudidroidTheme.DayNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AudidroidTheme.DayNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AudidroidTheme.Seekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">?colorPrimary</item>
        <item name="android:thumbTint">?colorPrimary</item>
    </style>

    <style name="Widget.AudidroidTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorOnBackground</item>
    </style>

    <!-- Leanback-->
    <style name="AudidroidTheme.OnBoarding" parent="Theme.Leanback.Onboarding">
        <item name="fontFamily">@font/rubik</item>
        <item name="onboardingDescriptionStyle">@style/OptimizedOnboardingDescriptionStyle</item>
        <item name="onboardingLogoStyle">@style/OptimizedLogoStyle</item>
        <item name="onboardingPageIndicatorStyle">@style/OptimizedPageIndicator</item>
        <item name="onboardingNavigatorContainerStyle">@style/OptimizedNavContainer</item>
        <item name="onboardingHeaderStyle">@style/OptimizedHeader</item>
    </style>

    <style name="OptimizedOnboardingDescriptionStyle" parent="Widget.Leanback.OnboardingDescriptionStyle">
        <item name="android:paddingRight">@dimen/keyline_2</item>
        <item name="android:paddingLeft">@dimen/keyline_2</item>
    </style>

    <style name="OptimizedLogoStyle" parent="Widget.Leanback.OnboardingLogoStyle">
        <item name="android:layout_width">@dimen/size_logo</item>
        <item name="android:layout_height">@dimen/size_logo</item>
    </style>

    <style name="OptimizedPageIndicator" parent="Widget.Leanback.OnboardingPageIndicatorStyle">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="dotToDotGap">@dimen/keyline_5</item>
        <item name="lbDotRadius">@dimen/dot_radius</item>
        <item name="dotBgColor">@color/color_surface</item>
    </style>

    <style name="OptimizedNavContainer" parent="Widget.Leanback.OnboardingNavigatorContainerStyle">
        <item name="android:layout_marginBottom">@dimen/container_margin</item>
    </style>

    <style name="OptimizedHeader" parent="Widget.Leanback.OnboardingHeaderStyle">
        <item name="android:layout_marginTop">@dimen/container_margin</item>
    </style>

</resources>
